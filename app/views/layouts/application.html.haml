!!! XML
!!!
%html
  %head
    %title Hitchhiker
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = yield :javascripts_to_load
    = csrf_meta_tags
  
  %body
    
    = render 'shared/login_panel'
    
    #menu
      = render 'shared/app_menu'
    
    #content
      - if flash[:notice]
        .notice
          = flash[:notice]
          = yield :notice
      - if flash[:error] || flash[:alert]
        - error_msg = flash[:error] || flash[:alert]
        .error
          = error_msg
          = yield :error

      = yield

