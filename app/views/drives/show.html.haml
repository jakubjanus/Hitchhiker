- if @drive
  
  = content_for :javascripts_to_load do
    = javascript_include_tag "http://maps.googleapis.com/maps/api/js?key=AIzaSyDa-llwFFalhiAG7hDfGYinRC5RohcfrBU&sensor=false"
    = javascript_include_tag 'show_drive'
  
  %h1 Dane przejazdu
  .drives_show
    %div
      %span
        Miejsce startowe:
      %span
        = @drive.start_city.name
    - if @throughs
      %div
        Przez:
        - @throughs.each do |through|
          %div
            = through.city.name
            
    %div
      %span
        Miejsce docelowe:
      %span
        = @drive.destination_city.name
        
    - if @drive.get_distance_in_km
      %div
        %span
          Długość przejazdu:
        %span
          = @drive.get_distance_in_km
          km
          
    - if @drive.comment
      %div
        %span
          Komentarz:
        %span
          = @drive.comment
          
    - if @drive.cost
      %div
        %span
          Cena:
        %span
          = @drive.cost
          = @drive.currency
    %div
      %span
        Data wyjazdu:
      %span
        = @drive.date
    %div
      %span
        Ilość wolnych miejsc:
      %span
        = @drive.free_seats
        
    - if @drive.user.id == current_user.id
      
      = link_to 'edytuj przejazd', edit_drive_path(@drive) if @drive.is_up_to_date
      = link_to 'usuń przejazd', {:action => 'destroy', :id => @drive.id}, :confirm => "Jesteś pewien?", :method => 'delete'
      
    - else
      
      %div
        %span
          Wystawiono przez:
        %span
          = link_to @drive.user.name, ''
          = link_to 'wyślij wiadomość', '/messages/new/' + current_user.id.to_s + '/' + @drive.user.id.to_s
          
      = link_to 'złóż rezerwację', ''
      
  #map_canvas{:style => "width:350px; height:350px; float: right; position: absolute; left: 350px; top: 50px;"}

- else
  
  %h1 Błąd
  %p
    Nie znaleziono żądanego przejazdu.